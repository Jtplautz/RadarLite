@page
@model IdentityServerHost.Pages.Create.Index
@section Styles
{
<link href="@Url.Content("~/css/site.css")" rel="stylesheet" type="text/css" />
}
<div class="create-page">

    @*    <partial name="_ValidationSummary" />*@


    <div class="col-md-6">
        <div class="signup-card">
            <div class="card-header">
                <h2>RadarLite Create Account</h2>
            </div>

            <div class="card-body">
                <form class="center-form" asp-route="Create">
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input tabindex="1" class="form-control" placeholder="Email Address" asp-for="Input.Email" autofocus>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Username"></label>
                        <input tabindex="2" class="form-control" placeholder="Username" asp-for="Input.Username" autofocus>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input tabindex="3" type="password" class="form-control" placeholder="Password" asp-for="Input.Password" autocomplete="off">
                    </div>

                    <button class="btn btn-primary btn-md" name="Input.Button" value="create">Create Account</button>
                    <button class="btn btn-secondary btn-md" name="Input.Button" value="cancel">Cancel</button>
                </form>
            </div>
        </div>
    </div>
</div>