@page
@model IdentityServerHost.Pages.Login.Index
@section Styles 
{
    <link href="@Url.Content("~/css/login.css")" rel="stylesheet" type="text/css" />
}
<div class="login-page">

    <partial name="_ValidationSummary" />

    <div class="row">

        @if (Model.View.EnableLocalLogin)
        {
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header" style="text-align">
                        <h2>RadarLite Login</h2>
                    </div>

                    <div class="card-body">
                        <form class="center-form" asp-route="Login">
                            <input type="hidden" asp-for="Input.ReturnUrl" />

                            <div class="form-group">
                                <label asp-for="Input.Username"></label>
                                <input tabindex="1" class="form-control" placeholder="Username" asp-for="Input.Username" autofocus>
                            </div>
                            <div class="form-group">
                                <label asp-for="Input.Password"></label>
                                <input tabindex="2" type="password" class="form-control" placeholder="Password" asp-for="Input.Password" autocomplete="off">
                            </div>
                            
                            @*@if (Model.View.AllowRememberLogin)
                            {
                                <div class="form-group">
                                    <div class="form-check">
                                        <input class="form-check-input" asp-for="Input.RememberLogin">
                                        <label class="form-check-label" asp-for="Input.RememberLogin">
                                            Remember My Login
                                        </label>
                                    </div>
                                </div>
                            }*@
                            
                            <button class="btn btn-primary btn-md" name="Input.Button" value="login">Login</button>
                            @*<button class="btn btn-secondary btn-md" name="Input.Button" value="cancel">Cancel</button>*@
                        </form>
                    </div>
                </div>
            </div>
        }

